{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "pfioh-openshift",
    "creationTimestamp": null,
    "annotations": {
      "description": "Creates pfioh on OpenShift",
      "tags": ""
    }
  },
  "objects": [{
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "creationTimestamp": null,
        "generation": 1,
        "labels": {
          "app": "pfioh"
        },
        "name": "pfioh"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "app": "pfioh",
          "deploymentconfig": "pfioh"
        },
        "strategy": {
          "activeDeadlineSeconds": 21600,
          "resources": {},
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "pfioh",
              "deploymentconfig": "pfioh"
            }
          },
          "spec": {
            "containers": [{
              "command": [
                "/usr/bin/pfioh",
                "--forever",
                "--httpResponse",
                "--storeBase=/share",
                "--createDirsAsNeeded",
                "--enableTokenAuth",
                "--tokenPath=/etc/pfioh/auth/pfioh_config.cfg"
              ],
              "image": "fnndsc/pfioh",
              "imagePullPolicy": "Always",
              "name": "pfioh",
              "ports": [{
                "containerPort": 5055,
                "protocol": "TCP"
              }],
              "resources": {
                "limits": {
                  "memory": "1024Mi",
                  "cpu": "2000m"
                },
                "requests": {
                  "memory": "150Mi",
                  "cpu": "250m"
                }
              },
              "terminationMessagePath": "/dev/termination-log",
              "volumeMounts": [{
                "name": "shared-volume",
                "mountPath": "/share"
              },
              {
                "name": "pfioh-config",
                "mountPath": "/etc/pfioh/auth",
                "read-only": "true"
              }
            ]
            }],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "volumes": [{
              "name": "shared-volume",
              "hostPath": {
                "path": "/tmp/share"
              }
            },
            {
              "name": "pfioh-config",
              "secret":{
                "secretName": "pfioh-config"
              }
            }]
          }
        },
        "test": false,
        "triggers": [{
          "type": "ConfigChange"
        }]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "pfioh"
        },
        "name": "pfioh"
      },
      "spec": {
        "ports": [{
          "name": "5055-tcp",
          "port": 5055,
          "protocol": "TCP",
          "targetPort": 5055
        }],
        "selector": {
          "app": "pfioh",
          "deploymentconfig": "pfioh"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "annotations": {
          "openshift.io/host.generated": "true"
        },
        "creationTimestamp": null,
        "name": "pfioh"
      },
      "spec": {
        "port": {
          "targetPort": "5055-tcp"
        },
        "to": {
          "kind": "Service",
          "name": "pfioh",
          "weight": 100
        },
        "wildcardPolicy": "None"
      }
    }
  ],
  "parameters": [

  ],
  "labels": {
    "template": "application-template-pfioh-openshift"
  }
}
